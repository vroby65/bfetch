#!/bin/bash
# bfetcth.sh - mini neofetch in pure bash

# === Colors ===
c0="\e[0m"
c1="\e[1;31m" # red
c2="\e[1;32m" # green
c3="\e[1;34m" # blue
c4="\e[1;36m" # cyan
c5="\e[1;35m" # magenta
c6="\e[1;33m" # yellow
c7="\e[1;37m" # white

# === Info ===
USER_HOST="$USER@$(hostname)"
OS="$(uname -o)"
KERNEL="$(uname -r)"
UPTIME="$(uptime -p | cut -d ' ' -f2-)"
SHELL="$SHELL"
TERM="$TERM"
MEM="$(free -m | awk '/Mem:/ {print $3 "MB / " $2 "MB"}')"
DISK="$(df -h / | awk 'NR==2 {print $3 " / " $2}')"
DISTRO=$(grep -E '^PRETTY_NAME=' /etc/os-release | cut -d= -f2 | tr -d '"')


# === Logo Tux (piccolo) ===
read -r -d '' LOGO <<'EOF'
   .--.   
  |o_o |  
  |:_/ |  
 //   \ \ 
(|     | )
/'\_   _/`\
\___)=(___/
EOF

# === Stampa info + logo a destra ===
printf "${c6}OS:     ${c0}%-43s ${c2}%s\n" "$OS"     "$(echo "$LOGO" | sed -n 1p)"
printf "${c6}Kernel: ${c0}%-40s ${c2}%s\n" "$KERNEL" "$(echo "$LOGO" | sed -n 2p)"
printf "${c6}Uptime: ${c0}%-40s ${c2}%s\n" "$UPTIME" "$(echo "$LOGO" | sed -n 3p)"
printf "${c6}Shell:  ${c0}%-40s ${c2}%s\n" "$SHELL"  "$(echo "$LOGO" | sed -n 4p)"
printf "${c6}Term:   ${c0}%-40s ${c2}%s\n" "$TERM"   "$(echo "$LOGO" | sed -n 5p)"
printf "${c6}Memory: ${c0}%-40s ${c2}%s\n" "$MEM"    "$(echo "$LOGO" | sed -n 6p)"
printf "${c6}Disk:   ${c0}%-40s ${c2}%s\n" "$DISK"   "$(echo "$LOGO" | sed -n 7p)"
printf "${c6}Distro: ${c0}$DISTRO"
printf "\n${c4}$USER_HOST${c0}\n"
